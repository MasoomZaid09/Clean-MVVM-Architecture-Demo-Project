<!--        />-->


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline27"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/masoomHorizontalH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline

        android:id="@+id/masoomHorizontalH2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/masoomHorizontalH3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/masoomHorizontalV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.01" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/masoomHorizontalV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinecircular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="336dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinecircular2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />




    <com.akexorcist.roundcornerprogressbar.indeterminate.IndeterminateRoundCornerProgressBar
        android:id="@+id/progressIndicator"
        android:layout_width="510dp"
        android:layout_height="8dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="invisible"
        app:rcAnimationSpeedScale="3"
        app:rcBackgroundColor="@color/white"
        app:rcProgressColor="@color/light_grey"
        app:layout_constraintTop_toBottomOf="@id/guideline20"
        app:layout_constraintStart_toStartOf="@id/btnstartSedationWithNewPatient"
        app:layout_constraintEnd_toEndOf="@id/btnstartSedationWithNewPatient"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStartSedationwithExisting"
        android:layout_width="0dp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/button_box_drawables"
        android:fontFamily="@font/avenir_next_lt_pro_medium"
        android:text="@string/start_existing"
        android:textSize="@dimen/_8sdp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/guidelineBodyParamsEnd"
        app:layout_constraintStart_toStartOf="@id/guidelineBodyParamsStart"
        app:layout_constraintTop_toBottomOf="@id/progressIndicator" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnstartSedationWithNewPatient"
        android:layout_width="0dp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/button_box_drawables"
        android:fontFamily="@font/avenir_next_lt_pro_medium"
        android:text="@string/start"
        android:textSize="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="@id/guidelineBodyParamsEnd"
        app:layout_constraintStart_toStartOf="@id/guidelineBodyParamsStart"
        app:layout_constraintTop_toBottomOf="@id/btnStartSedationwithExisting" />

        <include
            android:id="@+id/includeMale"
            layout="@layout/content_male_layout"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/guidelineMale"
            app:layout_constraintTop_toBottomOf="@id/guidelineMaleFemaleTop"
            android:layout_marginEnd="@dimen/_5sdp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="265dp"
            android:layout_height="66dp"
            android:background="@color/light_grey"
