<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sedation_System_Ext" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/racing_green</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MatchSpinnerStyle" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:divider">#123456</item>
        <item name="android:dividerHeight">2dp</item>

    </style>

    <style name="MatchSpinnerTheme" parent="Theme.AppCompat.Light">
        <item name="android:dropDownListViewStyle">@style/MatchSpinnerStyle</item>
    </style>

    <style name="subheading_text_style_unit_regular" >
        <item name="android:textSize">@dimen/_5sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/arial_regular</item>
    </style>

    <style name="Theme.ProgressBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ack_green</item>
        <item name="colorPrimaryVariant">@color/ack_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ack_green</item>
        <item name="colorSecondaryVariant">@color/ack_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="prefix_style">
        <item name="android:textSize">@dimen/_6sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/arial_regular</item>
    </style>

    <style name="subheading_text_style_unit" >
        <item name="android:textSize">@dimen/_6sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/arial_bold</item>
    </style>

    <style name="subheading_text_style_graph" >
        <item name="android:textSize">@dimen/_5sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/arial_regular</item>
    </style>

    <style name="button_normal_style">
        <item name="android:textSize">@dimen/_5sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/avenir_next_lt_pro_medium</item>
    </style>

    <style name="NoBlackDefaultBackground." parent="android:Theme.Material.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>